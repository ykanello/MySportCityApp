<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_feat_img"
            android:layout_width="match_parent"
            android:minHeight="@dimen/space_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textStyle="bold"
                android:ellipsize="end"
                android:text="this is a text message t o tes the ellipse for the text of mine"
                android:textSize="@dimen/txt_15" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Description of mine and this is very long to describe. Please describe this and be happy. Description of mine and this is very long to describe. Please describe this and be happy. Description of mine and this is very long to describe. Please describe this and be happy."
                android:textSize="@dimen/txt_12" />

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:ellipsize="end"
                android:gravity="left"
                android:text="test"
                android:textSize="@dimen/txt_8" />
        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_16"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_feat_img"
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_100"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:src="@drawable/img_temp" />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />
</LinearLayout>